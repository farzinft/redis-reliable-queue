#!/usr/bin/env php
<?php

$files = [
    __DIR__ . '/../../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../../../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../../vendor/autoload.php'
];

$found = false;

foreach ($files as $file) {
    if (file_exists($file)) {
        require_once $file;
        $found = true;
    }
}

if ($found == false) {
    exit('can not load autoload file');
}

use \Reliable\ReliableQueue;

ReliableQueue::publishConfig();

ReliableQueue::log('check application root directory');

?>
